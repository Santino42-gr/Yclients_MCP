{
  "name": "yclients-mcp-server",
  "version": "1.0.0",
  "description": "MCP сервер для автоматизации записи клиентов в салон красоты через YClients API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:sse": "MCP_TRANSPORT=sse node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:sse": "MCP_TRANSPORT=sse tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "railway:build": "npm run build",
    "railway:start": "MCP_TRANSPORT=sse node dist/index.js"
  },
  "keywords": [
    "mcp",
    "yclients",
    "booking",
    "salon",
    "api",
    "railway"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.21.2",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
